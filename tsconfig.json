{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "index.ts"]
}
